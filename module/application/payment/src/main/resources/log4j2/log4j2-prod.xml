<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%thread] [%X{requestId}] [%t] %highlight{%-5level} %style{%logger{36}}{cyan} :: %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <!-- 애플리케이션 로그 -->
        <Logger name="com.ngyu.swiftpay" level="info" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- Hibernate DB 정보 로그 제거 -->
        <Logger name="org.hibernate.orm.connections.pooling" level="error"/>
        <Logger name="org.hibernate.engine.jdbc.connections.internal" level="error"/>

        <Root level="warn">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
